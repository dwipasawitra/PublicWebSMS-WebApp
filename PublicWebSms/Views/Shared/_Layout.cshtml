</head>
<body class="metrouicss" onload="prettyPrint()">
<div class="page">
<div class="nav-bar bg-color-darken">
    <a href="@Url.Content("~/Report")" id="gateway-status">
    @if(ViewBag.GatewayStatus)
    {
        <i class="icon-broadcast fg-color-white" title="Server SMS online"></i>
    }
    else
    {
        <i class="icon-broadcast fg-color-redLight" title="Server SMS offline"></i>
    }
    </a>
    <div class="nav-bar-inner padding10">
        <span class="pull-menu"></span>

        <a href="@Url.Content("~/")">
            <span class="element brand">
                <i class="icon-mail bg-color-green"></i>
                <span style="vertical-align: top;">Public Web SMS</span>
            </span>
        </a>

        <div class="divider"></div>

        <ul class="menu">
        @if (PublicWebSms.Models.UserSession.IsLogin() && !PublicWebSms.Models.UserSession.IsAdmin())
        {
			<li><a href="@Url.Content("~/Dashboard")">Dashboard</a></li>
			<li><a href="@Url.Content("~/Message/Compose")">Compose</a></li>
			<li><a href="@Url.Content("~/Message/Draft")">Draft</a></li>
			<li><a href="@Url.Content("~/Message/Outbox")">Outbox</a></li>
			<li><a href="@Url.Content("~/Contact")">Contact</a></li>
			<li><a href="@Url.Content("~/Contact/ShowGroup")">Group</a></li>
            <li><a href="@Url.Content("~/Report")">Status Server</a></li>
            <li style="float:right;"><a href="@Url.Content("~/Account/Logout")">Logout</a></li>
        }
        else if(PublicWebSms.Models.UserSession.IsAdmin())
        {
            <li><a href="@Url.Content("~/Admin/UserAprove")">User Management</a></li>
            <li><a href="@Url.Content("~/Report")">Status Server</a></li>
            <li style="float:right;"><a href="@Url.Content("~/Account/Logout")">Logout</a></li>
        }
        else
        {
            <li><a href="@Url.Content("~/")">Beranda</a></li>
            <li><a href="@Url.Content("~/Message/FreeCompose")">SMS Gratis</a></li>
            <li><a href="@Url.Content("~/Report")">Status Server</a></li>
            <li><a href="@Url.Content("~/Home/About")">Tentang</a></li>
            <li style="float:right;"><a href="@Url.Content("~/Account/Login")">Login</a></li>
        }

        </ul>

    </div>
</div>
</div>

<div id="main" class="page secondary">
    <div class="page-header">
        <div class="page-header-content">
            <h1>@ViewBag.Title</h1>
            <a href="/" class="back-button big page-back"></a>
        </div>
    </div>

    <div class="page-region">
        <div class="page-region-content">

@RenderBody()

        </div>
    </div>
</div>

<div id="footer">
            <span>
                &copy; 2013 </i> Public Web SMS by <a class="fg-color-white" href="mailto:pws_tc@gmail.com">Ifan Iqbal & Putu Wiramasawara Widya</a>
            </span>
</div>

<script type="text/javascript" src="~/Content/metro/js/assets/github.info.js"></script>
<script type="text/javascript" src="~/Content/metro/js/assets/google-analytics.js"></script>
<script type="text/javascript" src="~/Content/metro/js/google-code-prettify/prettify.js"></script>
<script src="~/Content/metro/js/sharrre/jquery.sharrre-1.3.4.min.js"></script>

</body>
</html>
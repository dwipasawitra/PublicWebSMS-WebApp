<!DOCTYPE HTML>
<html>
<head>
	<title>@ViewBag.Title - Public Web SMS</title>
    <meta charset="utf-8">
    <meta name="viewport" content="target-densitydpi=device-dpi, width=device-width, initial-scale=1.0, maximum-scale=1">
    <meta name="description" content="Public Web SMS">
    <meta name="author" content="Ifan Iqbal & Putu Wiramasawara Widya">

    <link rel="stylesheet" href="~/Content/themes/base/jquery.ui.datepicker.css" />
    <link href="~/Content/metro/css/modern.css" rel="stylesheet">
    <link href="~/Content/metro/css/modern-responsive.css" rel="stylesheet">
    <link href="~/Content/metro/css/site.css" rel="stylesheet" type="text/css">
    <link href="~/Content/metro/js/google-code-prettify/prettify.css" rel="stylesheet" type="text/css">

    
    <script type="text/javascript" src="~/Content/metro/js/assets/jquery-1.9.0.min.js"></script>
    <script type="text/javascript" src="~/Content/metro/js/assets/jquery.mousewheel.min.js"></script>
    <script type="text/javascript" src="~/Content/metro/js/assets/moment.js"></script>
    <script type="text/javascript" src="~/Content/metro/js/assets/moment_langs.js"></script>

    <script type="text/javascript" src="~/Content/metro/js/modern/dropdown.js"></script>
    <script type="text/javascript" src="~/Content/metro/js/modern/accordion.js"></script>
    <script type="text/javascript" src="~/Content/metro/js/modern/buttonset.js"></script>
    <script type="text/javascript" src="~/Content/metro/js/modern/carousel.js"></script>
    <script type="text/javascript" src="~/Content/metro/js/modern/input-control.js"></script>
    <script type="text/javascript" src="~/Content/metro/js/modern/pagecontrol.js"></script>
    <script type="text/javascript" src="~/Content/metro/js/modern/rating.js"></script>
    <script type="text/javascript" src="~/Content/metro/js/modern/slider.js"></script>
    <script type="text/javascript" src="~/Content/metro/js/modern/tile-slider.js"></script>
    <script type="text/javascript" src="~/Content/metro/js/modern/tile-drag.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery-ui-1.8.20.min.js"></script>
    <style>
        .checkbox-column {
            vertical-align: bottom;
            width: 1em;
        }
        .group-list {
            max-width: 10em;
            text-align: center;
            display: inline;
        }
        #footer {
            margin: 0 auto;
            width: 100%;
            height: 2em;
            padding: .5em;
            text-align: center;
            color: #1d1d1d !important;
            z-index: 1000;
        }
        #footer * {
            color: #1D1D1D !important;
        }
        #main {
            padding-bottom: 3em;
        }
        #gateway-status {
            float: left;
            margin: 15px 0 0 10px;
        }
    </style>
